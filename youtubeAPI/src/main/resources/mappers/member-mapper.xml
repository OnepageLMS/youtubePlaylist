<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Member">
	<insert id="insertInstructor">
		insert into lms_instructor (name, email)
		values (#{name}, #{email})
	</insert>
	
	<insert id="insertStudent">
		insert into lms_student (name, email)
		values (#{name}, #{email})
	</insert>
	
	<select id="getInstructorName" resultType="String">
		select name from lms_instructor where id=#{id}
	</select>
	
	<select id="getStudentName" resultType="String">
		select name from lms_student where id=#{id}
	</select>
	
	<select id="getInstructor" resultType="member">
		select id, name, email from lms_instructor where email=#{email}
	</select>
	
	<select id="getStudent" resultType="member">
		select id, name, email from lms_student where email=#{email}
	</select>
	
</mapper>